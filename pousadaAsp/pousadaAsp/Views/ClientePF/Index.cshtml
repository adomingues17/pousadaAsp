@model pousadaAsp.ViewModels.ClientePFIndexViewModel

<h2>Clientes PF</h2>

<p>Usuário logado: @Model.EmailLogado</p>

<form method="get">
    <input type="text" name="busca" value="@Model.Busca" placeholder="Buscar cliente..." />
    <button type="submit">Buscar</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>CPF</th>
            <th>Endereço</th>
            <th>CEP</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model.Clientes)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.CPF</td>
                <td>@cliente.Endereco</td>
                <td>@cliente.CEP</td>
                <td>
                    <a asp-action="Details" asp-route-id="@cliente.Id">Detalhes</a> |
                    <a asp-action="Edit" asp-route-id="@cliente.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@cliente.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    Página @Model.PaginaAtual de @Model.TotalPaginas
</div>
