@model IEnumerable<pousadaAsp.Models.Cliente>

<h2>Lista de Clientes</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Endereço</th>
            <th>CEP</th>
            <th>Nome</th>
            <th>Documento</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Endereco</td>
                <td>@cliente.CEP</td>

                @if (cliente is pousadaAsp.Models.PF pf)
                {
                    <td>@pf.NomePF</td>
                    <td>@pf.CPF</td>
                }
                else if (cliente is pousadaAsp.Models.PJ pj)
                {
                    <td>@pj.NomePJ</td>
                    <td>@pj.CNPJ</td>
                }

                <td>
                    <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@cliente.Id" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Novo Cliente</a>
